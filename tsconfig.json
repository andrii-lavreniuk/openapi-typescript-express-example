{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": ".",
		"paths": {
			"@/gen/*": ["./gen/*"],
			"@/*": ["./src/*"]
		},
		"lib": ["es2023"],
		"target": "es2022",
		"module": "node16",
		"moduleResolution": "node16",
		"allowJs": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src", "gen"],
	"exclude": ["node_modules"]
}
